function frame() {
    if (/* test for finished */) {
        clearInterval(id);
    } else {
        /* code to change the element style */  
    }
}
</pre>

<h3>Create the Animation Using JavaScript</h3>
<pre>
function myMove() {
    var elem = document.getElementById("animate"); 
    var pos = 0;
    var id = setInterval(frame, 5);
    function frame() {
        if (pos == 350) {
            clearInterval(id);
        } else {
            pos++; 
            elem.style.top = pos + 'px'; 
            elem.style.left = pos + 'px'; 
        }
    }
}	
</pre>

<style>
	#container {
		width: 400px;
		height: 400px;
		position: relative;
		background: yellow;
		margin: 10px 0 0 40px;
	}
	#animate {
		width: 50px;
		height: 50px;
		position: absolute;
		background: red;
	}
</style>

<p>
	<button onclick="myMove()">Click Me</button>
</p>
<div id="container">
	<div id="animate">
	</div>
</div>

<br><br>	

<script>
	// membuat function beri nama myMove
	function myMove() {
    var elem = document.getElementById("animate"); // mengambil element div id animate 
    var pos = 0;                                   // mendeklarasikan posisi animate 0px
    var id = setInterval(frame, 50);  // deklarasikan variable id = setInterval(frame, 5) pada function frame

    function frame() {
        if (pos == 350) {
            clearInterval(id); // menstop movement/change
        } else {               // menambah movement/change by 1
            pos++; 
            elem.style.top = pos + 'px'; 
            elem.style.left = pos + 'px'; 
        }
    }
}
</script>